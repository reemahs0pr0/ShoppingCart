@{
    ViewData["Title"] = "Gallery";
    List<Product> productslist = (List<Product>)ViewData["productlists"];
    List<Product> foundproductslist = (List<Product>)ViewData["foundproducts"];
    int count = (int)ViewData["count"];
    Product bestseller = (Product)ViewData["bestsellingproduct"];
    Product secondbestseller = (Product)ViewData["secondbestproduct"];
    Product thirdbestseller = (Product)ViewData["thirdbestproduct"];
    bool loggedIn = (bool)ViewData["loggedin"];
    List<Product> wishlist = (List<Product>)ViewData["wishlist"];

}

@section Scripts
{
    <script src="~/js/product/displayproduct.js"></script>
    <script src="~/js/wish/wish.js"></script>
}

<head>
    <title>cart</title>
    <style>
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            margin: 4px 2px;
            cursor: pointer;
        }

        .button2 {
            background-color: white;
            border: none;
            color: black;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 12px;
            padding: 3px;
            cursor: pointer;
        }

        .button3 {
            background-color: cornflowerblue;
            border: none;
            color: white;
            padding: 3px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }

        .buttonforcart {
            display: inline-block;
            padding: 10px;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: black;
            background-color: lavender;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
            position: fixed;
            top: 100px;
            right: 50px;
        }

            .buttonforcart:hover {
                background-color: #57509f
            }

            .buttonforcart:active {
                background-color: #57509f;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }

        table {
            margin: auto;
            width: 100%;
        }

        #search {
            display: inline-block
        }

        td {
            padding: 10px;
            width: 33.33%;
        }

        .wish_icon {
            width: 40px;
            height: 40px;
            cursor: pointer;
        }
    </style>
    

</head>
<body>
    
    <header>
        <h1>Software Gallery</h1>
    </header>
    <div id="subheader">
        @if (loggedIn == true)@*check if logged in*@
        {

            <div hidden id="logState" state="yes"></div>
        }
        else
        {
            <div hidden id="logState" state="no"></div>
        }

        @if (ViewData["name"] != null)
        {
            @:Hello, <b>@ViewData["name"]</b>
            <a href="/Purchases/DisplayPurchases" id="checkout"><u>My Purchases</u> | </a><a href="/Wish/Index"><u>My Wishlist</u></a> @:| <a href="/Logout/Index" id="logout"><u>Logout</u></a>
        }
        else
        {
            <a href="/Login/Index"><u>Login</u></a>
        }
    </div>
    <div id="body">
        <form action="/Cart/DisplayCart">
            <input type="submit" value="Cart: @count" class="buttonforcart" id="clickme" />
        </form>
        <br />
        <div id="search">
            <form action="/Product/Search" id="search" method="POST" class="form">
                <input id="searchid" type="search" class="search-field" placeholder="Looking for?" name="search" value="@ViewData["search"]" />
                <button id="searchitem" type="submit" class="button2">
                    <span>Search</span>
                    <img src="/img/mglass.png" />
                </button>
            </form>
        </div>
    </div>
    <br />
    <br />
    @{
        if (ViewBag.a == 1)
        {
            <table>
                @for (int i = 0; i < productslist.Count; i += 3)
                {
                    int j;
                    <tr>
                        @for (j = 0; j < 3 && i + j < productslist.Count; j++)
                        {
                            string url = "/img/" + productslist[i + j].Image;
                            <td>
                                <div>
                                    <img style="align-content:center" src=@url width="150" height="150" />
                                    <br /><br />
                                          <div style="align-content:center">
                                              <button class="button3 add-to-cart" id="@productslist[i + j].Id">
                                                  Add to Cart
                                              </button>
                                              @{string idWish = "wish" + productslist[i + j].Id;}  @*create wish ID*@
                                              @if (loggedIn == true) // generates wish icon according to loggedin status
                                              {
                                                  if (wishlist[i + j].Wish == false)
                                                  {
                                                      <img src="~/img/hearts black.png" class="wish_icon" id="@idWish" />
                                                  }
                                                  else
                                                  {
                                                      <img src="~/img/hearts color.png" class="wish_icon" id="@idWish" />
                                                  }
                                              }
                                              else
                                              {
                                                  <img src="~/img/hearts black.png" class="wish_icon" id="@idWish" />
                                              }


                                          </div>
                                    <div style="align-content:center">
                                        @if (productslist[i + j].Id == bestseller.Id)
                                        {
                                            <span style="color:darkred"><b>BEST SELLING!</b></span>
                                        }
                                        else if ((productslist[i + j].Id) == secondbestseller.Id)
                                        {
                                            <span style="color:orangered"><b>2nd BEST SELLING!</b></span>
                                        }
                                        else if ((productslist[i + j].Id) == thirdbestseller.Id)
                                        {
                                            <span style="color:darkgoldenrod"><b>3rd BEST SELLING!</b></span>
                                        }
                                        else
                                        {
                                            <span style="visibility:hidden"><b>NOT BEST SELLING!</b></span>
                                        }
                                    </div>
                                </div>
                                <br />
                                <div>
                                    <p style="text-align:justify"><b>@productslist[i + j].Title</b></p>
                                    <p style="text-align:justify">@productslist[i + j].Description</p>
                                    <p style="text-align:justify"><em>S$@productslist[i + j].Price</em></p>
                                </div>
                            </td>
                        }
                        @for (; j < 3; j++)
                        {
                            <td></td>
                        }
                    </tr>
                }
            </table>
        }
        else if (ViewBag.a == 2)
        {
            if (foundproductslist != null)
            {
                <table>
                    @for (int i = 0; i < foundproductslist.Count; i += 3)
                    {
                        int j;
                        <tr>
                            @for (j = 0; j < 3 && i + j < foundproductslist.Count; j++)
                            {
                                string url = "/img/" + foundproductslist[i + j].Image;
                                <td>
                                    <div>
                                        <img style="align-content:center" src=@url width="150" height="150" />
                                        <br /><br />
                                              <div style="align-content:center">
                                                  <button class="button3 add-to-cart" id="@foundproductslist[i + j].Id">
                                                      Add to Cart
                                                  </button>
                                                  @{string idWish = "wish" + foundproductslist[i + j].Id;}  @*create wish ID*@
                                                  @if (loggedIn == true) // generates wish icon according to loggedin status
                                                  {
                                                      if (wishlist[i + j].Wish == false)
                                                      {
                                                          <img src="~/img/hearts black.png" class="wish_icon" id="@idWish" />
                                                      }
                                                      else
                                                      {
                                                          <img src="~/img/hearts color.png" class="wish_icon" id="@idWish" />
                                                      }
                                                  }
                                                  else
                                                  {
                                                      <img src="~/img/hearts black.png" class="wish_icon" id="@idWish" />
                                                  }
                                              </div>
                                        <div style="align-content:center">
                                            @if (foundproductslist[i + j].Id == bestseller.Id)
                                            {
                                                <span style="color:darkred"><b>BEST SELLING!</b></span>
                                            }
                                            else if ((foundproductslist[i + j].Id) == secondbestseller.Id)
                                            {
                                                <span style="color:orangered"><b>2nd BEST SELLING!</b></span>
                                            }
                                            else if ((foundproductslist[i + j].Id) == thirdbestseller.Id)
                                            {
                                                <span style="color:darkgoldenrod"><b>3rd BEST SELLING!</b></span>
                                            }
                                            else
                                            {
                                                <span style="visibility:hidden"><b>NOT BEST SELLING!</b></span>
                                            }
                                        </div>
                                    </div>
                                    <br />
                                    <div>
                                        <p style="text-align:justify"><b>@foundproductslist[i + j].Title</b></p>
                                        <p style="text-align:justify">@foundproductslist[i + j].Description</p>
                                        <p style="text-align:justify"><em>S$@foundproductslist[i + j].Price</em></p>
                                    </div>
                                </td>
                            }
                            @for (; j < 3; j++)
                            {
                                <td></td>
                            }
                        </tr>
                    }
                </table>
            }
        }
        else
        {
            <p>The item you are searching for is not found.</p>
        }
    }
</body>
